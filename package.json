{
  "name": "modular-core",
  "version": "0.4.1",
  "description": "JavaScript application modular support",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "author": "Han Feng <han_feng@foxmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/han-feng/modular.git"
  },
  "scripts": {
    "build": "babel src --out-dir dist",
    "lint": "eslint src/**",
    "test": "jest",
    "preversion": "node script/sync-version.js",
    "prebuild": "rimraf dist/* && node script/sync-version.js",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "chalk": "^2.4.2",
    "eslint": "^5.15.0",
    "eslint-plugin-vue": "^5.2.2",
    "jest": "^24.1.0",
    "rimraf": "^2.6.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/strongly-recommended",
      "@vue/standard"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/test/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,json}"
    ],
    "browser": true,
    "collectCoverage": true
  }
}
